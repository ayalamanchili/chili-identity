<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">


	<!-- Reroute google rpc calls through a spring dispatcherservlet -->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<!-- We're using an annotation based web application context -->
		<init-param>
			<param-name>contextClass</param-name>
			<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
		</init-param>
		<!-- The spring @Configuration can be found here -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>info.yalamanchili.office.server.SpringConfiguration</param-value>
		</init-param>

	</servlet>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/info.yalamanchili.office.office/rpc/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file> office.html </welcome-file>
	</welcome-file-list>
</web-app>