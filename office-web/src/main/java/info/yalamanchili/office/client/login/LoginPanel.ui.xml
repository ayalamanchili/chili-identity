<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='officeImages' type='info.yalamanchili.office.client.resources.OfficeImages'/>
    <g:PopupPanel ui:field='loginPanel'>
        <g:HTMLPanel ui:field='loginGrid'  styleName="{style.loginPanel}">
            <table>
                <tr>
                    <td colspan="2" align="center">
                        <g:Image resource='{officeImages.logo}'/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label ui:field='usernameL'>Username</g:Label>
                    </td>
                    <td>
                        <g:TextBox ui:field='usernameTb' debugId="usernameTb"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <g:Label ui:field='passwordL'>Password</g:Label>
                    </td>
                    <td>
                        <g:PasswordTextBox ui:field='passwordTb' debugId="passwordTb"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <g:Button title='Login' ui:field='loginB' debugId="loginB">Login</g:Button>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
    </g:PopupPanel>
    <ui:style>
        .loginPanel {
        background-color: #e1e1e1;
        border:1px solid black;
        }
    </ui:style>
</ui:UiBinder> 