<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:PopupPanel ui:field='loginPanel'>
		<g:Grid ui:field='loginGrid' borderWidth="2" styleName="{style.loginPanel}"
			cellSpacing='5'>
			<g:row>
				<g:customCell>
					<g:Label ui:field='usernameL'>Username</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field='usernameTb' debugId="usernameTb"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label ui:field='passwordL'>Password</g:Label>
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field='passwordTb' debugId="passwordTb"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Button title='Login' ui:field='loginB' debugId="loginB">Login</g:Button>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:PopupPanel>
	<ui:style>
		.loginPanel {
			background-color: #E5ECFF;
		}
	</ui:style>
</ui:UiBinder> 