<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:office="urn:import:info.yalamanchili.office.client">
    <g:DockLayoutPanel unit='PCT' styleName="{style.entityLayout}">
        <g:north size='3.5'>
            <g:FlowPanel ui:field='entityTitlePanel'>
            </g:FlowPanel>
        </g:north>
        <g:west size='13'>
            <g:FlowPanel styleName="{style.sidePanel}" ui:field='sidePanel'>
                <g:ScrollPanel styleName="{style.sidePanelTop}" ui:field='sidePanelTop'>
                </g:ScrollPanel>
                <g:ScrollPanel styleName="{style.sidePanelBottom}" ui:field='sidePanelBottom'>
                </g:ScrollPanel>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel addStyleNames='entityPanelHolder' ui:field='entityPanelHolder'>
                <g:FlowPanel ui:field='entityPanel' styleName="{style.entityPanel}">
                </g:FlowPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
    <ui:style>
        .entityLayout {
        height: 100%;
        }
		
	

		
        .entityPanel {
			
        }
		
        .sidePanel {
        border-right-style: solid;
        border-right-color: #bc033d;
        border-top-color: #bc033d;
        border-right-width: 0px;
        border-radius:0px;
        height: 100%;
        padding: 10px;
        background-color:#eef2fd;
        
        }
		
        .sidePanelTop {
        height: 60%;
        }
		
        .sidePanelBottom {
        height: 40%;
        }
    </ui:style>
</ui:UiBinder> 