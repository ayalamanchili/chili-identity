<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:office="urn:import:info.yalamanchili.office.client">
    <!-- had to use px since ie has issues with em https://code.google.com/p/google-web-toolkit/issues/detail?id=7029
    -->
    <g:DockLayoutPanel ui:field='entityDockPanel' unit='PX' styleName="{style.entityLayout}">
        <g:north size='40'>
            <g:FlowPanel ui:field='entityTitlePanel'>
            </g:FlowPanel>
        </g:north>
        <g:west size='240'>
            <g:FlowPanel styleName="{style.sidePanel}" ui:field='sidePanel'>
                <g:ScrollPanel styleName="{style.sidePanelTop}" ui:field='sidePanelTop'>
                </g:ScrollPanel>
                <g:ScrollPanel styleName="{style.sidePanelBottom}" ui:field='sidePanelBottom'>
                </g:ScrollPanel>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel addStyleNames='entityPanelHolder' ui:field='entityPanelHolder'>
                <g:FlowPanel ui:field='entityPanel' styleName="{style.entityPanel}">
                </g:FlowPanel>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
    <ui:style>
        .entityLayout {
        height: 100%;
        }
		
	

		
        .entityPanel {
			
        }	
		
        .sidePanel {
        
        }
		
        .sidePanelTop {
        height: 60%;
        }
		
        .sidePanelBottom {
        height: 40%;
        }
    </ui:style>
</ui:UiBinder> 