<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:office="urn:import:info.yalamanchili.office.client">
    <ui:with field='officeImages' type='info.yalamanchili.office.client.resources.OfficeImages'/>
    <g:DockLayoutPanel unit='EM' addStyleNames='mainPanel'>
        <g:north size='4'>
            <g:FlowPanel ui:field='statusPanel' styleName="{style.statusPanel}">
                <office:StatusPanel></office:StatusPanel>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:FlowPanel ui:field='entityPanel'>
            </g:FlowPanel>
        </g:center>
        <g:south size='1.5'>
            <g:Grid styleName="{officeImages.officeCss.footerPanel}">
                <g:row>
                    <g:customCell styleName="{officeImages.officeCss.copyRightLabel}">
                        <g:Label >COPYRIGHT &copy; 2012-2016 sstech.us - All Rights Reserved</g:Label>
                    </g:customCell>
                    <g:customCell styleName = "{officeImages.officeCss.feedbackAnchor}">
                        <g:Anchor ui:field='feedbacklnk'>Submit Feedback</g:Anchor>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:south>
    </g:DockLayoutPanel>
    <ui:style>
        .statusPanel {
        border-bottom-style: solid;
        border-bottom-color: #fafbfe;
        border-bottom-width: 2px;
        }
    </ui:style>
</ui:UiBinder> 