<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:office="urn:import:info.yalamanchili.office.client">
    <ui:with field='officeImages' type='info.yalamanchili.office.client.resources.OfficeImages'/>
    <g:DockLayoutPanel unit='EM' addStyleNames='mainPanel'>
        <g:north size='4'>
            <g:Grid styleName="{style.loginPageStatusPanel}">
                <g:row>
                    <g:customCell>
                        <g:Image ui:field='loginLogo' resource='{officeImages.logo}'/>
                    </g:customCell>
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:Label ui:field='usernameL'>Username</g:Label>
                    </g:customCell>
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:TextBox ui:field='usernameTb' debugId="usernameTb"/>
                    </g:customCell>             
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:Label ui:field='passwordL'>Password</g:Label>
                    </g:customCell>
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:PasswordTextBox ui:field='passwordTb' debugId="passwordTb"/>
                    </g:customCell>
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:Button title='Login' ui:field='loginB' debugId="loginB">Login</g:Button>
                    </g:customCell>
                    <g:customCell styleName="{style.loginPageWidget}">
                        <g:Image ui:field='forgotPasswordIcon' title="Forgot/Reset password" resource='{officeImages.forgotPassword}'/>
                    </g:customCell>
                </g:row>           
            </g:Grid>
        </g:north>      
        <g:center>
            <!--<g:Gridcen styleName="{style.loginFeatures}">-->
            <g:FlowPanel ui:field='loginCenterPanel'>
                <g:Image ui:field='loginCenter'  resource='{officeImages.loginCenter}'/>           
            </g:FlowPanel>
               
          
            <!--</g:Gridcen>-->
        </g:center>
        <g:south size='1.5'>
            <g:Grid styleName="{officeImages.officeCss.footerPanel}">
                <g:row>
                    <g:customCell styleName="{officeImages.officeCss.copyRightLabel}">
                        <g:Label >COPYRIGHT &copy;2012-2014 sstech.us - All Rights Reserved</g:Label>
                    </g:customCell>
                    <g:customCell styleName = "{officeImages.officeCss.feedbackAnchor}">
                        <g:Anchor ui:field='accountResetL'>Account Reset</g:Anchor>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:south>
    </g:DockLayoutPanel>
    <ui:style>
        .loginPageStatusPanel {
        width: 100%;
        padding: 10px;
        border-bottom-style: solid;
        border-bottom-width: 1px;
        }
        .loginPageWidget{
        width: 30px;
        }
    </ui:style>
</ui:UiBinder> 