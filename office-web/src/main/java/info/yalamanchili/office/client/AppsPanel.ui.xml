<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:office="urn:import:info.yalamanchili.office.client">
    <g:StackLayoutPanel ui:field='appsPanel'
                        styleName='{style.stackLayoutPanel}' unit='EM'>
        <g:stack>
            <g:customHeader size='2'>
                <g:Label styleName='{style.stackHeader}'>Messages</g:Label>
            </g:customHeader>
            <g:FlowPanel>
                <g:Label>time sheets</g:Label>
                <g:Label>status</g:Label>
            </g:FlowPanel>
        </g:stack>

        <g:stack>
            <g:customHeader size='2'>
                <g:Label styleName='{style.stackHeader}'>Tasks</g:Label>
            </g:customHeader>
            <g:FlowPanel>
                <g:Label>TTP 1243</g:Label>
            </g:FlowPanel>
        </g:stack>
    </g:StackLayoutPanel>
    <ui:style>
        .stackLayoutPanel {
        height: 100%;
        }
		
        .stackHeader {
        height: 90%;
        background-color: #E5ECFF;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        }
    </ui:style>
</ui:UiBinder>
