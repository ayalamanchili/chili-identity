<module rename-to='office'>
    <inherits name="com.google.gwt.user.User" />

    <!-- logging -->
    <inherits name="com.google.gwt.logging.Logging" />
    <!-- Enable Firebug logger and disable console logger -->
    <set-property name="gwt.logging.firebugHandler" value="ENABLED" />
    <set-property name="gwt.logging.popupHandler" value="DISABLED" />

    <!-- GWT Super Dev mode -->
    <add-linker name="xsiframe"/>
    <set-configuration-property name="devModeRedirectEnabled" value="true"/>
    
    <!--HTTP Module -->
    <inherits name='com.google.gwt.http.HTTP' />

    <!-- used to support internationalization -->
    <inherits name='com.google.gwt.i18n.I18N' />
    <extend-property name="locale" values="ES" />

    <!-- used to include chili-gwt project in gwt compiler path -->
    <inherits name='info.yalamanchili.chili-gwt' />

    <!-- gwt client bundle to load resources -->
    <inherits name="com.google.gwt.resources.Resources" />
    <entry-point class="info.yalamanchili.office.client.OfficeWelcome" />
    <stylesheet src="office.css" />

    <source path='client' />
    <!-- use this setting in development mode to speed up compile time -->
    <set-property name="user.agent" value="safari" />
        
    <!-- enables the debug id are set elementswidgets -->
    <inherits name='com.google.gwt.user.Debug'/>
    
    <replace-with class="info.yalamanchili.office.client.config.OfficeClientConfigDev">
        <when-type-is class="info.yalamanchili.office.client.config.OfficeClientConfig" />
    </replace-with>
</module>