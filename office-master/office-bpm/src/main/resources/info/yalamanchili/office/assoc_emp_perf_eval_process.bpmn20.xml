<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="assoc_emp_perf_eval_process">
        <startEvent id="start"/>
        
        <!-- Manager approval task-->
        <sequenceFlow  sourceRef="start" targetRef="hrReviewTask" />
        <userTask id="hrReviewTask" 
                  name="HR Performance Evaluation Review Task for ${currentEmployee.firstName} ${currentEmployee.lastName}"
                  activiti:candidateGroups="ROLE_H1B_IMMIGRATION,ROLE_GC_IMMIGRATION">
            <documentation>
                Performance Evaluation Review Task
                Employee Name              : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Evaluation Fiscal Year     : #{entity.evaluationFYYear}
                Follow instructions from below:
                https://apps.sstech.us/site/office/perf-eval/assoc-approval-process.html
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.perfeval.AssociatePerfEvalProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.perfeval.AssociatePerfEvalProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="hrNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="hrReviewTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="hrReviewTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="hrReviewTaskEscalationTimer" 
                      targetRef="hrReviewTaskEscalation" />
        <serviceTask id="hrReviewTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="hrReviewTask" 
                      targetRef="approvalGateway" />
        <exclusiveGateway id="approvalGateway" />
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="eemApprovalTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="end">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <userTask id="eemApprovalTask" 
                  name="Engagement Manager Performance Evaluation Approval Task for ${currentEmployee.firstName} ${currentEmployee.lastName}" 
                  activiti:candidateGroups="ROLE_RELATIONSHIP">
            <documentation>
                Performance Evaluation Engagement Task
                Employee Name              : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Evaluation Fiscal Year     : #{entity.evaluationFYYear}
                Rating                     : #{entity.rating}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.perfeval.AssociatePerfEvalProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.perfeval.AssociatePerfEvalProcess" />
                <activiti:formProperty id="managerNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="eemApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="eemApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="eemApprovalTaskEscalationTimer" 
                      targetRef="eemApprovalTaskEscalation" />
        <serviceTask id="eemApprovalTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <sequenceFlow  sourceRef="eemApprovalTask" targetRef="end" />
        <endEvent id="end" />
    </process>
</definitions>