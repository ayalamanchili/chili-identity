<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="on_boarding_employee_process">
        <startEvent id="onBoardingEmployeeProcessStart">
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="onBoardingEmployeeProcessStart" targetRef="onBoardingEmployeeProcessStart" />
        <serviceTask id="sendOnBoardingEmployeeProcessRequestReceivedEmail" 
                     name="On Boarding Employee Process Request Received Email" 
                     activiti:expression="#{OnBoardingEmployeeProcessBean.sendOnBoardingEmployeeRequestSubmittedEmail(entity)}" />
        
        
        
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="onBoardingEmployeeProcessApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <sequenceFlow id="flow4" sourceRef="onBoardingEmployeeProcessApprovalTask" targetRef="onBoardingEmployeeProcessEnd" />
        <!-- end-->
        <endEvent id="onBoardingEmployeeProcessEnd" />
    </process>
</definitions>