<?xml version="1.0" encoding="UTF-8"?>
 
<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="address_update_process">
 
        <startEvent id="updateAddressStart" />
        
        <sequenceFlow id="flow1" sourceRef="updateAddressStart" targetRef="addressUpdatedEmail" />
        <!-- Send Address Updated Email notification -->
        <serviceTask
            id="addressUpdatedEmail"
            name="Employee Address Updated"
            activiti:expression="${profileNotificationService.sendEmployeeAddressUpdatedNotification(employee)}">
        </serviceTask>
        
        <sequenceFlow id="createHRTaskFlow" sourceRef="addressUpdatedEmail" targetRef="updateAddressHRTask" />
        <!--Create EmployeeAddressUpdatedTask for HR Role-->
        <userTask id="updateAddressHRTask" 
                  name="Employee ${employee.firstName} ${employee.lastName} Address Updated" 
                   activiti:candidateGroups="ROLE_HR,ROLE_TIME,ROLE_EXPENSE,ROLE_ADMIN">
            <documentation>
                Employee Address is updated in portal and task is created for HR group for handling immigration and related changes
            </documentation>
        </userTask>
        <sequenceFlow sourceRef="updateAddressHRTask" targetRef="updateAddressEnd" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="updateAddressHRTask">
            <timerEventDefinition> 
                <timeDuration>PT7D</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- process end-->
        <endEvent id="updateAddressEnd" />
 
    </process>
 
</definitions>