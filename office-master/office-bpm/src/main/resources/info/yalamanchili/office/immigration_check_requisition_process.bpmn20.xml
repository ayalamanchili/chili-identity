<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="immigration_check_requisition_process">
        <startEvent id="immigrationCheckRequisitionStart"/>
        
        <!-- Manager approval task-->
        <sequenceFlow  sourceRef="immigrationCheckRequisitionStart" targetRef="checkRequestApprovalTask" />
        <userTask id="checkRequestApprovalTask" 
                  name="Immigration Check Approval by for ${employeeName}">
            <documentation>
                Check Requisition Detail
                Submitted By    : #{entity.submittedBy}
                Amount          : #{entity.amount}
                Purpose         : #{entity.purpose}
                Needed By Date  : #{entity.neededByDate}
                Requested Date  : #{entity.requestedDate}
                MailingAddress  : #{entity.mailingAddress}
                CaseType        : #{entity.caseType}
                Attorney        : #{entity.attorneyName}
                Status          : #{entity.status}
                Follow instructions from below:
                https://apps.sstech.us/site/office/expense/immigrationcheckprocess.html
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.immigration.ImmigrationCheckRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.immigration.ImmigrationCheckRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="checkRequestApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="checkRequestApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="checkRequestApprovalTaskEscalationTimer" 
                      targetRef="checkRequestApprovalTaskEscalation" />
        <serviceTask id="checkRequestApprovalTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="checkRequestApprovalTask" 
                      targetRef="approvalGateway" />
        <exclusiveGateway id="approvalGateway" />
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="accountDeptDispatchTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="immigrationCheckRequisitionEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <userTask id="accountDeptDispatchTask" 
                  name="Immigration Check Dispatch Task for Accounts Payable Dept for ${employeeName}" 
                  activiti:candidateGroups="ROLE_ACCOUNTS_PAYABLE">
            <documentation>
                Check Requisition Detail
                Submitted By    : #{entity.submittedBy}
                Amount          : #{entity.amount}
                Purpose         : #{entity.purpose}
                Needed By Date  : #{entity.neededByDate}
                Requested Date  : #{entity.requestedDate}
                MailingAddress  : #{entity.mailingAddress}
                CaseType        : #{entity.caseType}
                Attorney        : #{entity.attorneyName}
                ApprovedBy      : #{entity.approvedBy}
                ApprovedDate    : #{entity.approvedDate}
                AccountedBy     : #{entity.accountedBy}
                Status          : #{entity.status}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.immigration.ImmigrationCheckRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.immigration.ImmigrationCheckRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="accountDeptDispatchTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="accountDeptDispatchTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="accountDeptDispatchTaskEscalationTimer" 
                      targetRef="accountDeptDispatchTaskEscalation" />
        <serviceTask id="accountDeptDispatchTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="accountDeptDispatchTask" 
                      targetRef="finalApprovalTaskGateway" />
        <exclusiveGateway id="finalApprovalTaskGateway" />
        <sequenceFlow sourceRef="finalApprovalTaskGateway" 
                      targetRef="immigrationCheckRequisitionEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="finalApprovalTaskGateway" 
                      targetRef="immigrationCheckRequisitionEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <endEvent id="immigrationCheckRequisitionEnd" />
    </process>
</definitions>