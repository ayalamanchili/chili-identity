<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="employee_deactivation_process">
 
        <startEvent id="EmployeeDeactivationStart" />
        <sequenceFlow id="flow1" sourceRef="EmployeeDeactivationStart" targetRef="EmployeeDeactivationHRTask" />
        <!--Create New Corporate Employee Created Task for HR Admin Role-->
        <userTask id="EmployeeDeactivationHRTask" 
                  name="Employee ${employee.firstName} ${employee.lastName} Deactivation Task" 
                  activiti:candidateGroups="ROLE_HR_ADMINSTRATION">
            <documentation>
                Employee ${employee.firstName} ${employee.lastName} deactivated.
                End Date of the employee is ${employee.getEndDate()}...
                Please verify whether the deactivated employee is a company contact of any other employees,
                Please go to My Office --> Employees --> Advanced search --> Company Contacts.
                Enter the Deactivated employee name and search... 
                If you found any employee having company contact, please update and complete this task before end date....
                
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.email.GenericTaskCreateNotification" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.email.GenericTaskCompleteNotification" />
            </extensionElements> 
        </userTask>
        <!--<sequenceFlow sourceRef="EmployeeDeactivationHRTask" targetRef="EmployeeDeactivationEnd" /> -->
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="EmployeeDeactivationHRTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <sequenceFlow sourceRef="EmployeeDeactivationHRTask" 
                      targetRef="sendDeactivationCompletedEmail" />
        <serviceTask id="sendDeactivationCompletedEmail" 
                     name="Employee deactivation Completed Email" 
                     activiti:expression="#{employeeDeactivationProcessBean.sendDeactivationCompletedEmail(employee)}" />
        <sequenceFlow sourceRef="sendDeactivationCompletedEmail" 
                      targetRef="EmployeeDeactivationEnd" />
        <endEvent id="EmployeeDeactivationEnd" />
    </process>
 
</definitions>


