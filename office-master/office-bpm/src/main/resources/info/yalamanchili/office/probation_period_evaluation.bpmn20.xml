<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="probation_period_evaluation_process">
        <startEvent id="start"/>
        
        <!-- Manager approval task-->
        <sequenceFlow  sourceRef="start" targetRef="managerReviewTask" />
        <userTask id="managerReviewTask" 
                  name="Probation Period Evaluation Task for ${entity.employee.firstName} ${entity.employee.lastName}">
            <documentation>
                Please complete employee Probation Period Evaluation for 
                
                Employee Name              : #{entity.employee.firstName} #{entity.employee.lastName}
                
                1) Naviate to My Office--> Search Employee--> View --> Reports--> Probation Evaluations-->Create Manager Review.
                2) Once Review is completed come back to My Tasks and Complete this task. A Task/Email is sent to employee for final acceptance.
                
                Detailed instructions below:
                https://apps.sstech.us/site/office/perf-eval/probation-period-evaluation-process.html
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="managerReviewTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="managerReviewTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="managerReviewTaskEscalationTimer" 
                      targetRef="managerTaskEscalation" />
        <serviceTask id="managerTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="managerReviewTask" 
                      targetRef="employeeAcceptTask" />
        <userTask id="employeeAcceptTask" 
                  name="Probation Period Evaluation Review and Acknowledge Task"
                  activiti:assignee="${entity.employee.employeeId}" >
            <documentation>
                Your manager has completed your Probation Period Evaluation and now its ready for your acceptance.
                1) Please review your evaluation under Home--> My Reports--> Probation Evaluation
                2) Once review is complete please go to My Tasks--> to acknowledge and complete it.
                Detailed instructions below:
                https://apps.sstech.us/site/office/perf-eval/probation-period-evaluation-process.html            
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
                <activiti:formProperty id="accepted" 
                                       name="Accept?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="accept" name="Acknowledge"/>
                </activiti:formProperty>                
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="employeeAcceptTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="employeeAcceptTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="employeeAcceptTaskEscalationTimer" 
                      targetRef="employeeAcceptTaskEscalation" />
        <serviceTask id="employeeAcceptTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <sequenceFlow  sourceRef="employeeAcceptTask" targetRef="hrFinalApprovalTask" />
        <userTask id="hrFinalApprovalTask" 
                  name="Probation Period Evaluation Final HR Approval Task for ${entity.employee.firstName} ${entity.employee.lastName}" 
                  activiti:candidateGroups="ROLE_HR_ADMINSTRATION,ROLE_PRB_EVALUATIONS_MANAGER">
            <documentation>
                Probation Period Evaluation Final HR Approval Task
                Employee has acknowledged his Probation Period Evaluation review.
                Please add comments to task (My Tasks) to complete review.
                Employee Name              : #{entity.employee.firstName} #{entity.employee.lastName}
                
                Detailed instructions below:
                https://apps.sstech.us/site/office/perf-eval/probation-period-evaluation-process.html                                
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.probationeval.ProbationPeriodEvaluationProcess" />
                <activiti:formProperty id="hrNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="finalHRApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="hrFinalApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="finalHRApprovalTaskEscalationTimer" 
                      targetRef="finalHRApprovalTaskEscalation" />
        <serviceTask id="finalHRApprovalTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <sequenceFlow  sourceRef="hrFinalApprovalTask" targetRef="end" />
        <endEvent id="end" />        
    </process>
</definitions>