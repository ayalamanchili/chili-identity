<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="outof_office_process">
        <startEvent id="outOfOfficeStart"/>
        
        <!-- Manager approval task-->
        <sequenceFlow  sourceRef="outOfOfficeStart" targetRef="outOfOfficeMgrApprovalTask" />
        <userTask id="outOfOfficeMgrApprovalTask" 
                  name="Remote Work Request Manager Approval Task for ${currentEmployee.firstName} ${currentEmployee.lastName}">
            <documentation>
                Employee Remote Work Request Manager Approval Task
                Employee Name       : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Remote Work Type   : #{entity.outOfOfficeType}
                Start Date          : #{entity.startDate}
                End Date            : #{entity.endDate}
                Reason Notes        : #{entity.reason}
                Recurring           : #{entity.recurring}
                time                : #{entity.time}
                
                Navigate to view OutOf Office Request:
                Time > Remote Work > Search > Click View Icon (or)
                Time > Remote Work > Table Action column > Click View Icon
                Follow instructions from below:
                https://apps.sstech.us/site/office/timesheets/OutOfOffice/submit-out-of-office-request.html
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.OutOfOfficeRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.OutOfOfficeRequestProcess" />
                
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="outOfOfficeApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="outOfOfficeMgrApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="outOfOfficeApprovalTaskEscalationTimer" 
                      targetRef="outOfOfficeApprovalTaskEscalation" />
        <serviceTask id="outOfOfficeApprovalTaskEscalation" name="Task Email Escalation" activiti:class="info.yalamanchili.office.bpm.EmailEscalation"> </serviceTask>
        <endEvent id="outOfOfficeEnd" />
    </process>
</definitions>