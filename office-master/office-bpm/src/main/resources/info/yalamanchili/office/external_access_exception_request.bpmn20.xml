<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="external-access-exception-request">
        <startEvent id="externalAccessExceptionStart">
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="externalAccessExceptionStart" targetRef="externalAccessExceptionRequestTask" />
        <userTask id="externalAccessExceptionRequestTask" 
                  name="External Access Request"
                   activiti:candidateGroups="ROLE_ADMIN,ROLE_SYSTEM_AND_NETWORK_ADMIN">
            <documentation>
                Remote Access Information:
                UserId      : ${entity.userId} 
                Remote IP   : ${entity.remoteIp} 
                Valid Until : ${entity.validUntil} 
                Reason      : ${entity.reason}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.access.ExternalAccessExceptionProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.access.ExternalAccessExceptionProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="externalAccessExceptionRequestTask" targetRef="externalAccessExceptionEnd" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="externalAccessExceptionRequestTask">
            <timerEventDefinition> 
                <timeDuration>PT24H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="externalAccessExceptionEnd" />
    </process>
</definitions>