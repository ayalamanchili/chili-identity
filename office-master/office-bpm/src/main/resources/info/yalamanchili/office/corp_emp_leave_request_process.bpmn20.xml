<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="corp_emp_leave_request_process">
        <startEvent id="leaveRequestStart"/>
        <!-- Validate leave Request-->
        <sequenceFlow  sourceRef="leaveRequestStart" targetRef="validateLeaveRequestTask" />
        <serviceTask id="validateLeaveRequestTask" 
                     name="Validate Leave Request Task" 
                     activiti:expression="#{corpEmpLeaveRequestProcessBean.validateLeaveRequest(currentEmployee,entity)}"
                     activiti:resultVariable="validRequest" />
        <!--desision-->
        <sequenceFlow sourceRef="validateLeaveRequestTask" 
                      targetRef="validationGateway" />
        <exclusiveGateway id="validationGateway" />
        <!-- if valid request create user task for approval -->
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="leaveRequestApprovalTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == true}
            </conditionExpression>
        </sequenceFlow>
        <!-- if not valid send email about rejection -->
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="sendValidationFailedRejectionEmail">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == false}
            </conditionExpression>
        </sequenceFlow>
        <!--send validations failed rejection email-->
        <serviceTask id="sendValidationFailedRejectionEmail" 
                     name="Validation Failed Rejection Email" 
                     activiti:expression="#{corpEmpLeaveRequestProcessBean.sendLeaveRequestRejectedEmail(currentEmployee)}" />
        <sequenceFlow  sourceRef="sendValidationFailedRejectionEmail" targetRef="leaveRequestEnd" />
        <!-- Leave Request approval task -->
        <userTask id="leaveRequestApprovalTask" 
                  name="Leave Request Task for ${currentEmployee.firstName} ${currentEmployee.lastName}">
            <documentation>
                Corporate Employee Leave Request
                Employee Name : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Hire Date     : #{currentEmployee.startDate}
                Start Date    : #{entity.startDate}
                End Date      : #{entity.endDate} 
                Category      : #{entity.category} 
                Hours         : #{entity.hours} 
                Notes         : #{entity.notes}
                PTO Available when request submitted : #{summary.availablePTOHours}
                
                Follow instructions from below:
                https://apps.sstech.us/site/office/timesheets/approving-timesheets.html
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="leaveRequestApprovalTaskNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="leaveRequestApprovalTask" targetRef="leaveRequestEnd" />
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="leaveApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="leaveRequestApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="leaveApprovalTaskEscalationTimer" 
                      targetRef="leaveApprovalTaskEscalation" />
        <serviceTask
            id="leaveApprovalTaskEscalation"
            name="Leave Approval Task Escalation"
            activiti:class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess">
        </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="leaveRequestApprovalTask" 
                      targetRef="approvalGateway" />
        <exclusiveGateway id="approvalGateway" />
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="unpaidLeaveFinalApprovalTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved' and entity.category == 'Unpaid'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="saveApprovedLeaveRequest">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved' and entity.category != 'Unpaid'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="leaveRequestEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <userTask id="unpaidLeaveFinalApprovalTask" 
                  name="Unpaid Leave Final Approval Task for ${currentEmployee.firstName} ${currentEmployee.lastName}">
            <documentation>
                Corporate Employee Unpaid Leave Final Approval Request
                Employee Name       : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Hire Date           : #{currentEmployee.startDate}
                Start Date          : #{entity.startDate}
                End Date            : #{entity.endDate} 
                Category            : #{entity.category} 
                Hours               : #{entity.hours} 
                Notes               : #{entity.notes}
                Approval Task Notes : #{leaveRequestApprovalTaskNotes}
               
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="unpaidLeaveFinalApprovalNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="unpaidLeaveFinalApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="unpaidLeaveFinalApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="unpaidLeaveFinalApprovalTaskEscalationTimer" 
                      targetRef="leaveApprovalTaskEscalation" />
        <sequenceFlow sourceRef="unpaidLeaveFinalApprovalTask" 
                      targetRef="unpaidLeaveFinalApprovalGateway" />
        <exclusiveGateway id="unpaidLeaveFinalApprovalGateway" />
        <sequenceFlow sourceRef="unpaidLeaveFinalApprovalGateway" 
                      targetRef="saveApprovedLeaveRequest">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="unpaidLeaveFinalApprovalGateway" 
                      targetRef="leaveRequestEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <serviceTask id="saveApprovedLeaveRequest" 
                     name="Save Approved Leave Request" 
                     activiti:expression="#{corpEmpLeaveRequestProcessBean.saveApprovedLeaveRequest(execution, leaveRequestApprovalTaskNotes)}" />
        <sequenceFlow sourceRef="saveApprovedLeaveRequest"  targetRef="leaveRequestEnd" />
        <!-- end-->
        <endEvent id="leaveRequestEnd" />
    </process>
</definitions>