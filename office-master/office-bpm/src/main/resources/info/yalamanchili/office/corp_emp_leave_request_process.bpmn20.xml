<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="corp_emp_leave_request_process">
        <startEvent id="leaveRequestStart">
            <extensionElements>
                <activiti:formProperty id="startDate" 
                                       name="StartDate"
                                       required="true"
                                       type="date">
                </activiti:formProperty>
                <activiti:formProperty id="endDate" 
                                       name="End Date"
                                       required="true" 
                                       type="date" />
                <activiti:formProperty id="hours" 
                                       name="Hours"
                                       required="true"
                                       type="long">
                </activiti:formProperty>
                <activiti:formProperty id="category" 
                                       name="Category"
                                       required="true"
                                       type="enum">
                    <activiti:value id="Sick_Spent" name="Sick"/>
                    <activiti:value id="Personal_Spent" name="Personal"/>
                    <activiti:value id="Vacation_Spent" name="Vacation"/>
                    <activiti:value id="Unpaid" name="Unpaid"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements>
        </startEvent>
        <sequenceFlow  sourceRef="leaveRequestStart" targetRef="validateLeaveRequestTask" />
        <serviceTask id="validateLeaveRequestTask" 
                     name="Validate Leave Request Task" 
                     activiti:expression="#{corpEmpLeaveRequestValidator.validateLeaveRequest(currentEmployee,category, hours)}"
                     activiti:resultVariable="validRequest" />
        <!--desision-->
        <sequenceFlow sourceRef="validateLeaveRequestTask" 
                      targetRef="validationGateway" />
        <exclusiveGateway id="validationGateway" />
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="leaveRequestApprovalTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == true}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="leaveRequestEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == false}
            </conditionExpression>
        </sequenceFlow>
       <!-- Leave Request approval task -->
        <userTask id="leaveRequestApprovalTask" 
                  name="Leave Request Approval Task">
            <documentation>
                Corporate Employee Leave Request
                Employee Name : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Start Date    : #{startDate}
                End Date      : #{endDate} 
                Category      : #{category} 
                Hours         : #{hours} 
                Notes         : #{notes}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="taskNotes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="leaveRequestApprovalTask" targetRef="leaveRequestEnd" />
        <!-- Task escalation email after 48 hours-->
        <boundaryEvent id="leaveApprovalTaskEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="leaveRequestApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="leaveApprovalTaskEscalationTimer" 
                      targetRef="leaveApprovalTaskEscalation" />
        <serviceTask
            id="leaveApprovalTaskEscalation"
            name="Leave Approval Task Escalation"
            activiti:class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess">
        </serviceTask>
        <!--desision-->
        <sequenceFlow sourceRef="leaveRequestApprovalTask" 
                      targetRef="approvalGateway" />
        <exclusiveGateway id="approvalGateway" />
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="unpaidFinalApprovalTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved' and category == 'Unpaid'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="leaveRequestEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${category != 'Unpaid'}
            </conditionExpression>
        </sequenceFlow>
        <userTask id="unpaidFinalApprovalTask" 
                  name="Unpaid Leave Final Approval Task" 
                  activiti:candidateGroups="ROLE_ADMIN">
            <documentation>
                Corporate Employee Unpaid Leave Final Approval Request
                Employee Name : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Start Date    : #{startDate}
                End Date      : #{endDate} 
                Category      : #{category} 
                Hours         : #{hours} 
                Notes         : #{notes}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="true" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow sourceRef="unpaidFinalApprovalTask"  targetRef="leaveRequestEnd" />
        <!-- end-->
        <endEvent id="leaveRequestEnd" />
    </process>
</definitions>