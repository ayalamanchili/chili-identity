<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="corporate_status_report_approval_process">
        <startEvent id="corporateStatusReportStart">
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="corporateStatusReportStart" targetRef="corporateStatusReportApprovalTask" />
        <userTask id="corporateStatusReportApprovalTask" 
                  name="Corporate Status Report Task">
            <documentation>
                Corporate Status Report Approval Task
                Report Start Date    : #{entity.reportStartDate}
                Report End Date      : #{entity.reportEndDate}                
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.statusreport.CorporateStatusReportProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.statusreport.CorporateStatusReportProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="corporateStatusReportApprovalTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <sequenceFlow id="flow4" sourceRef="corporateStatusReportApprovalTask" targetRef="corporateStatusReportEnd" />
        <!-- end-->
        <endEvent id="corporateStatusReportEnd" />
    </process>
</definitions>