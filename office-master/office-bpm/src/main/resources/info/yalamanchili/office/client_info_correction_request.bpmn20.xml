<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="client_info_correction_request">
        <startEvent id="clientInfoCorrectionStart">
            <extensionElements>
                <activiti:formProperty id="correctionDetails" 
                                       name="Correction Details"
                                       required="true"
                                       type="string">
                </activiti:formProperty>
            </extensionElements>
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="clientInfoCorrectionStart" targetRef="clientInfoCorrectionTask" />
        <userTask id="clientInfoCorrectionTask" 
                  name="Client Information Correction Task" 
                  activiti:candidateGroups="ROLE_CONTRACTS_ADMIN">
            <documentation>
                Correct Client Information:
                Employee : ${currentEmployee.firstName} ${currentEmployee.lastName}
                Details  : ${correctionDetails} 
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.email.GenericTaskCreateNotification" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.email.GenericTaskCompleteNotification" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="clientInfoCorrectionTask" targetRef="clientInfoCorrectionTaskEnd" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="clientInfoCorrectionTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="clientInfoCorrectionTaskEnd" />
    </process>
</definitions>