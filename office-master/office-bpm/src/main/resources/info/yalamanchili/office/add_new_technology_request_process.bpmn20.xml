<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
    <process id="add_new_technology_request">
        <startEvent id="addNewTechnologyStart">
            <extensionElements>
                <activiti:formProperty id="technologyName" 
                                       name="Technology Name"
                                       required="true"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="technologyDescription" 
                                       name="Technology Description"
                                       required="false" 
                                       type="string" />
            </extensionElements>
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="addNewTechnologyStart" targetRef="addNewTechnologyTask" />
        <userTask id="addNewTechnologyTask" 
                  name="Add New Technology Request" 
                  activiti:candidateGroups="ROLE_RECRUITER">
            <documentation>
                Add Technology Group Information:
                Technology Name: ${technologyName} 
                Technology Description: ${technologyDescription}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.email.GenericTaskCreateNotification" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.email.GenericTaskCompleteNotification" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="addNewTechnologyTask" targetRef="addTechnologyEnd" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="addNewTechnologyTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="addTechnologyEnd" />
    </process>
</definitions >
