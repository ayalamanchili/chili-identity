<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="consultant_emp_leave_request_process">
        <startEvent id="leaveRequestStart"/>
        <!-- Validate leave Request-->
        <sequenceFlow  sourceRef="leaveRequestStart" targetRef="validateLeaveRequestTask" />
        <serviceTask id="validateLeaveRequestTask" 
                     name="Validate Leave Request Task" 
                     activiti:expression="#{consultantEmpLeaveRequestProcessBean.validateLeaveRequest(currentEmployee,leaveRequest)}"
                     activiti:resultVariable="validRequest" />
        <!--desision-->
        <sequenceFlow sourceRef="validateLeaveRequestTask" 
                      targetRef="validationGateway" />
        <exclusiveGateway id="validationGateway" />
        <!-- if valid request create user task for approval -->
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="consultantEmpLeaveRequestTask">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == true}
            </conditionExpression>
        </sequenceFlow>
        <!-- if not valid send email about rejection -->
        <sequenceFlow sourceRef="validationGateway" 
                      targetRef="sendValidationFailedRejectionEmail">
            <conditionExpression xsi:type="tFormalExpression">
                ${validRequest == false}
            </conditionExpression>
        </sequenceFlow>
        <!--send validations failed rejection email-->
        <serviceTask id="sendValidationFailedRejectionEmail" 
                     name="Validation Failed Rejection Email" 
                     activiti:expression="#{consultantEmpLeaveRequestProcessBean.sendLeaveRequestRejectedEmail(currentEmployee)}" />
        <sequenceFlow  sourceRef="sendValidationFailedRejectionEmail" targetRef="consultantEmpLeaveRequestEnd" />
        <userTask id="consultantEmpLeaveRequestTask" 
                  name="Leave Request submitted for ${currentEmployee.firstName} ${currentEmployee.lastName}" 
                  activiti:candidateGroups="ROLE_CONSULTANT_TIME_ADMIN">
            <documentation>
                Employee Leave Request
                Employee Name : #{currentEmployee.firstName} #{currentEmployee.lastName}
                Start Date    : #{leaveRequest.startDate}
                End Date      : #{leaveRequest.endDate} 
                Category      : #{leaveRequest.category} 
                Hours         : #{leaveRequest.hours} 
                Submited Date : #{leaveRequest.createdTimeStamp}
                Submited By   : #{submittedBy}
                PTO Available when request submitted : #{summary.availablePTOHours}
                Notes         : #{leaveRequest.notes}
                Follow instructions from below:
                https://apps.sstech.us/site/office/timesheets/employee-leave-request.html                
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.ConsultantEmpLeaveRequestProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.ConsultantEmpLeaveRequestProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow  sourceRef="consultantEmpLeaveRequestTask" targetRef="consultantEmpLeaveRequestEnd" />
        <!-- Task escalation email after 2 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="consultantEmpLeaveRequestTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="consultantEmpLeaveRequestEnd" />
    </process>
</definitions>