<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="add_new_client_request_1">
        <startEvent id="addNewClientStart">
            <extensionElements>
                <activiti:formProperty id="clientName" 
                                       name="Client Name"
                                       required="true"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="clientContactName" 
                                       name="Client Contact Name"
                                       required="false" 
                                       type="string" />
                <activiti:formProperty id="clientContactNumber" 
                                       name="Client Contact Number"
                                       required="false"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="clientContactEmail" 
                                       name="Client Contact Email"
                                       required="false"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="clientAddress" 
                                       name="Client Address"
                                       required="false"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements>
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="addNewClientStart" targetRef="addNewClientTask" />
        <userTask id="addNewClientTask" 
                  name="Add new Client request" 
                  activiti:candidateGroups="ROLE_TIME,ROLE_ADMIN">
            <documentation>
                Add Client Information:
                Client Name: ${clientName} 
                Client Contact Name: ${clientContactName}
                Client Contact Number : ${clientContactNumber} 
                Client Contact Email : ${clientContactEmail} 
                Client Address : ${clientAddress} 
                Notes : ${notes}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.email.GenericTaskCreateNotification" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.email.GenericTaskCompleteNotification" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="addNewClientTask" targetRef="addClientEnd" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="addNewClientTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="addClientEnd" />
    </process>
</definitions>