<?xml version="1.0" encoding="UTF-8"?>
<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="add_new_client_request">
        <startEvent id="addNewClientStart">
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="addNewClientStart" targetRef="addNewClientTask" />
        <userTask id="addNewClientTask" 
                  name="Please add a new Client" 
                  activiti:candidateGroups="ROLE_TIME,ROLE_ADMIN">
            <documentation>
                Please add new client
            </documentation>
            <extensionElements>
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow2" sourceRef="addNewClientTask" targetRef="genericTaskCreationEmail" />
        <serviceTask
            id="genericTaskCreationEmail"
            name="Task Creation Email"
            activiti:class="info.yalamanchili.office.bpm.email.GenericTaskCreationEmail">
        </serviceTask>
        <sequenceFlow id="flow3" sourceRef="genericTaskCreationEmail" targetRef="approvalGateway" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="addNewClientTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!--desision-->
        <exclusiveGateway id="approvalGateway" />
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="genericTaskApprovalEmail">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow sourceRef="approvalGateway" 
                      targetRef="addClientEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <!-- request approved email-->
        <serviceTask
            id="genericTaskApprovalEmail"
            name="Task Approval Email"
            activiti:class="info.yalamanchili.office.bpm.email.GenericTaskApprovalEmail">
        </serviceTask>
        <sequenceFlow id="flow4" sourceRef="approvalGateway" targetRef="addClientEnd" />
        <!-- end-->
        <endEvent id="addClientEnd" />
    </process>
</definitions>