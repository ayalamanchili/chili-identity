<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="corp_emp_leave_correction_request">
        <startEvent id="corpEmpLeaveCorrectionStart">
            <extensionElements>
                <activiti:formProperty id="correctionNotes" 
                                       name="CorrectionNotes"
                                       required="true"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="type" 
                                       name="Type"
                                       required="true"
                                       type="enum">
                    <activiti:value id="cancel" name="Cancel"/>
                    <activiti:value id="update" name="Update"/>
                </activiti:formProperty>
        </extensionElements>
        </startEvent>
        <sequenceFlow  sourceRef="corpEmpLeaveCorrectionStart" targetRef="corpEmpLeaveRequestCorrectionTask" />
        <userTask id="corpEmpLeaveRequestCorrectionTask" 
                  name="Cancel/Update Leave Request For ${currentEmployee.firstName} ${currentEmployee.lastName}" >
            <documentation>
                #{type} Leave Request For #{currentEmployee.firstName} #{currentEmployee.lastName}
                Notes: #{correctionNotes}
                If the Leave Request Task for the employee has not been approved please reject the task. 
                If the Leave Request Task for the employee has already been approved then a HR_Administrator can update/delete the timesheet.
                once action is taken you can approve or reject this Leave Correction task.
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestCorrectionProcess" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.time.CorpEmpLeaveRequestCorrectionProcess" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow  sourceRef="corpEmpLeaveRequestCorrectionTask" targetRef="corpEmpLeaveRequestCorrectionEnd" />
        <!-- Task escalation email after 2 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="corpEmpLeaveRequestCorrectionTask">
            <timerEventDefinition> 
                <timeDuration>PT48H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="corpEmpLeaveRequestCorrectionEnd" />
    </process>
</definitions>