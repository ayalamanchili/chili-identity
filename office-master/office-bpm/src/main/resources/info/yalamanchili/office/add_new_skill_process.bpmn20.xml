<definitions
    xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
    targetNamespace="http://www.bpmnwithactiviti.org"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:activiti="http://activiti.org/bpmn">
 
    <process id="add_new_skill_request">
        <startEvent id="addNewSkillStart">
            <extensionElements>
                <activiti:formProperty id="skillName" 
                                       name="Skill Name"
                                       required="true"
                                       type="string">
                </activiti:formProperty>
                <activiti:formProperty id="skillDescription" 
                                       name="Skill Description"
                                       required="false" 
                                       type="string" />
            </extensionElements>
        </startEvent>
        <sequenceFlow id="flow1" sourceRef="addNewSkillStart" targetRef="addNewSkillTask" />
        <userTask id="addNewSkillTask" 
                  name="Add New Skill Request" 
                  activiti:candidateGroups="ROLE_RECRUITER,ROLE_ADMIN">
            <documentation>
                Add Skill Information:
                Skill Name: ${skillName} 
                Skill Description: ${skillDescription}
            </documentation>
            <extensionElements>
                <activiti:taskListener event="create" class="info.yalamanchili.office.bpm.email.GenericTaskCreateNotification" />
                <activiti:taskListener event="complete" class="info.yalamanchili.office.bpm.email.GenericTaskCompleteNotification" />
                <activiti:formProperty id="status" 
                                       name="Approved?"
                                       required="true"
                                       type="enum">
                    <activiti:value id="approved" name="approved"/>
                    <activiti:value id="rejected" name="rejected"/>
                </activiti:formProperty>
                <activiti:formProperty id="notes" 
                                       name="Notes"
                                       required="false" 
                                       type="string" />
            </extensionElements> 
        </userTask>
        <sequenceFlow id="flow3" sourceRef="addNewSkillTask" targetRef="addNewSkillWithDesc">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved' and skillDescription != 'null'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow id="flow4" sourceRef="addNewSkillTask" targetRef="addNewSkill">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'approved' and skillDescription == 'null'}
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow id="flow5" sourceRef="addNewSkillTask" targetRef="addSkillEnd">
            <conditionExpression xsi:type="tFormalExpression">
                ${status == 'rejected'}
            </conditionExpression>
        </sequenceFlow>
        <serviceTask
            id="addNewSkillWithDesc"
            name="New Skill to Add After Approval"
            activiti:expression="#{addNewSkill.addSkillWithDesc(skillName, skillDescription)}" />
        
        <serviceTask
            id="addNewSkill"
            name="New Skill to Add After Approval"
            activiti:expression="#{addNewSkill.addSkill(skillName)}" />
        <!-- Task escalation email after 7 days-->
        <boundaryEvent id="emailEscalationTimer"
                       cancelActivity="false" 
                       attachedToRef="addNewSkillTask">
            <timerEventDefinition> 
                <timeDuration>PT168H</timeDuration> 
            </timerEventDefinition>
        </boundaryEvent>
        <sequenceFlow sourceRef="emailEscalationTimer" 
                      targetRef="taskEmailEscalation" />
        <serviceTask
            id="taskEmailEscalation"
            name="Task Email Escalation"
            activiti:class="info.yalamanchili.office.bpm.EmailEscalation">
        </serviceTask>
        <!-- end-->
        <endEvent id="addSkillEnd" />
    </process>
</definitions>
