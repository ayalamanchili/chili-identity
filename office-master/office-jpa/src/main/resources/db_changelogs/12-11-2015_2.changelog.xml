    <changeSet author="ayalamanchili" id="addCompanyToCI">
        <addColumn catalogName="office"
                   schemaName="public"
                   tableName="clientinformation">
            <column name="company" type="varchar(255)"/>
        </addColumn>
        <addColumn catalogName="office"
                   schemaName="public"
                   tableName="clientinformation_aud">
            <column name="company" type="varchar(255)"/>
        </addColumn>   
        <createIndex catalogName="office"
                     indexName="CI_CMPNY_IDX"
                     schemaName="public"
                     tableName="clientinformation"
                     unique="false">
            <column name="company" type="varchar(255)"/>
        </createIndex>                
    </changeSet>
</databaseChangeLog>