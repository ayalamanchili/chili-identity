<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="ayalamanchili" id="addApprovedDateToPerfAud">
        <addColumn catalogName="office"
                   schemaName="public"
                   tableName="PerformanceEvaluation_aud">
            <column name="approvedDate" type="date"/>
        </addColumn>    
    </changeSet>
    <changeSet author="ayalamanchili" id="fixSrcEntityIndexDrop">
        <dropIndex catalogName="office"
                   indexName="src_enty_id"
                   schemaName="public"
                   tableName="comment"/> 
        <dropIndex catalogName="office"
                   indexName="src_enty_id"
                   schemaName="public"
                   tableName="bankaccount"/> 
        <dropIndex catalogName="office"
                   indexName="src_enty_id"
                   schemaName="public"
                   tableName="ocheck"/>   
        <dropIndex catalogName="office"
                   indexName="src_enty_nm"
                   schemaName="public"
                   tableName="comment"/> 
        <dropIndex catalogName="office"
                   indexName="src_enty_nm"
                   schemaName="public"
                   tableName="bankaccount"/> 
        <dropIndex catalogName="office"
                   indexName="src_enty_nm"
                   schemaName="public"
                   tableName="ocheck"/>               
    </changeSet>
    <changeSet author="ayalamanchili" id="fixSrcEntityIndexAdd">
        <createIndex catalogName="office"
                     indexName="src_enty_id"
                     schemaName="public"
                     tableName="comment"
                     unique="false">
            <column name="sourceEntityId" type="bigint"/>
        </createIndex>  
        <createIndex catalogName="office"
                     indexName="src_enty_id"
                     schemaName="public"
                     tableName="ocheck"
                     unique="false">
            <column name="sourceEntityId" type="bigint"/>
        </createIndex>        
        <createIndex catalogName="office"
                     indexName="src_enty_id"
                     schemaName="public"
                     tableName="bankaccount"
                     unique="false">
            <column name="sourceEntityId" type="bigint"/>
        </createIndex>
        <createIndex catalogName="office"
                     indexName="src_enty_nm"
                     schemaName="public"
                     tableName="comment"
                     unique="false">
            <column name="sourceEntityName" type="varchar(255)"/>
        </createIndex>  
        <createIndex catalogName="office"
                     indexName="src_enty_nm"
                     schemaName="public"
                     tableName="ocheck"
                     unique="false">
            <column name="sourceEntityName" type="varchar(255)"/>
        </createIndex>        
        <createIndex catalogName="office"
                     indexName="src_enty_nm"
                     schemaName="public"
                     tableName="bankaccount"
                     unique="false">
            <column name="sourceEntityName" type="varchar(255)"/>
        </createIndex>        
    </changeSet>
</databaseChangeLog>